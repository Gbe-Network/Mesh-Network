{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "bot/**/*.ts",
    "oracle/**/*.ts",
    "scripts/**/*.ts",
    "*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
